<p id="notice"><%= notice %></p>

<h1>Contacts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contact', new_contact_path %>

<div class="container">
  <h4 class="text-start">Import Data</h4>
    <%= form_tag import_contacts_path, multipart: true do %>
      <%= file_field_tag :file %><br>
      <%= submit_tag "Upload data", class: "btn btn-outline-primary btn-lg mt-4 mb-4" %>
    <% end %>
  <h4>Export Data</h4>
    <%= submit_tag "Export data", class: "btn btn-outline-primary btn-lg mt-4" %>
</div>
